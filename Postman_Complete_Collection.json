{
  "info": {
    "name": "Database Explorer API",
    "description": "Complete workflow for exploring any database",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:5000/api/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "health"]
        }
      }
    },
    {
      "name": "2. Detect DB Type",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"connectionString\": \"postgresql://postgres:toor@localhost:5432/Nexgen_erp\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/database/detect",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "database", "detect"]
        }
      }
    },
    {
      "name": "3. Test Connection",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"connectionString\": \"postgresql://postgres:toor@localhost:5432/Nexgen_erp\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/database/test",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "database", "test"]
        }
      }
    },
    {
      "name": "4. Confirm & Create Session",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"connectionString\": \"postgresql://postgres:toor@localhost:5432/Nexgen_erp\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/database/confirm",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "database", "confirm"]
        }
      }
    },
    {
      "name": "5. Get Current Session",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-DB-Session",
            "value": "{{sessionId}}"
          }
        ],
        "url": {
          "raw": "http://localhost:5000/api/database/context/current",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "database", "context", "current"]
        }
      }
    },
    {
      "name": "6. List All Sessions",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:5000/api/database/contexts",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "database", "contexts"]
        }
      }
    },
    {
      "name": "7. Explore Full Schema",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-DB-Session",
            "value": "{{sessionId}}"
          }
        ],
        "url": {
          "raw": "http://localhost:5000/api/database/explore/{{sessionId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "database", "explore", "{{sessionId}}"]
        }
      }
    },
    {
      "name": "8. Explore Specific Table",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-DB-Session",
            "value": "{{sessionId}}"
          }
        ],
        "url": {
          "raw": "http://localhost:5000/api/database/explore/table/{{sessionId}}/users",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "database", "explore", "table", "{{sessionId}}", "users"]
        }
      }
    },
    {
      "name": "9. Close Session",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "http://localhost:5000/api/database/context/{{sessionId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "database", "context", "{{sessionId}}"]
        }
      }
    },
    {
      "name": "10. Save Connection",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
