          }
        ],
        "body": {
          "mode": "raw",
          "raw": ""
        },
        "url": {
          "raw": "http://localhost:5000/api/database/use-saved-connection/{{connectionId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "database", "use-saved-connection", "{{connectionId}}"]
        }
      }
    },
    {
      "name": "14. Delete Saved Connection",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
