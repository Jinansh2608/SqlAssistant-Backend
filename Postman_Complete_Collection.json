        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Nexgen_erp_prod\",\n  \"connectionString\": \"postgresql://postgres:toor@localhost:5432/Nexgen_erp\",\n  \"dbType\": \"PostgreSQL\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/database/save-connection",
