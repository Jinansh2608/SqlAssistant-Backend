        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Nexgen_erp_prod\",\n  \"connectionString\": \"postgresql://postgres:toor@localhost:5432/Nexgen_erp\",\n  \"metadata\": {\n    \"dbType\": \"PostgreSQL\",\n    \"tablesCount\": 0,\n    \"connectionStatus\": \"connected\"\n  }\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/database/save-connection",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "database", "save-connection"]
        },
        "description": "Save this PostgreSQL connection locally for future use. Stores connection details in a local JSON file."
      },
      "response": []
    },
    {
      "name": "10. List All Saved Connections",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:5000/api/database/connections",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "database", "connections"]
        },
        "description": "List all database connections you've saved locally"
      },
      "response": []
    },
    {
      "name": "11. Get Saved Connection Details",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:5000/api/database/connections/{{connectionId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "database", "connections", "{{connectionId}}"]
        },
        "description": "Get details about a specific saved connection. Replace {{connectionId}} with ID from step 10."
      },
      "response": []
    },
    {
      "name": "12. Use Saved Connection (Auto Session)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"connectionId\": \"conn_1705078200000\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/database/use-saved-connection",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "database", "use-saved-connection"]
        },
        "description": "Load a saved connection and automatically create a session. Replace connectionId with ID from step 10."
      },
      "response": []
    },
    {
      "name": "13. Delete Saved Connection",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "http://localhost:5000/api/database/connections/{{connectionId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "database", "connections", "{{connectionId}}"]
        },
        "description": "Delete a saved connection from local storage. Replace {{connectionId}} with your connection ID."
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "sessionId",
